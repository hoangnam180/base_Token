
    <!-- Categories Start -->
    <div class="container-fluid pt-5">
        <div class="text-center mb-4">
            <h2 class="section-title px-5"><span class="px-2">Sản phẩm mới nhất</span></h2>
        </div>
        <div class="row px-xl-5 pb-3">
            <% data.forEach(product => { %>
                <div class="col-lg-3 col-md-6 pb-1">             
                    <div class="card product-item border-0 mb-4">
                        <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0 img-product">
                            <img class="img-fluid w-100"  src="/<%=product.anh_sp %>" alt="">
                        </div>
                        <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                            <h6 class="text-truncate mb-3"><%=product.ten_sp %></h6>
                            <div class="d-flex justify-content-center">
                                <h6><%=product.gia_sp %> </h6><h6 class="text-muted ml-2"><del><%=product.khuyen_mai %></del></h6>
                            </div>
                        </div>
                        <div class="card-footer d-flex justify-content-between bg-light border">
                            <a href="/detail/?page_layout=detail-product&id=<%= product.id_sp %>" class="btn btn-sm text-dark p-0"><i class="fas fa-eye text-primary mr-1"></i>Chi tiết</a>
                            <a href="" class="btn btn-sm text-dark p-0"><i class="fas fa-shopping-cart text-primary mr-1"></i>Thêm vào giỏ hàng</a>
                        </div>
                    </div>
                </div>
                <% }) %>
        </div>

        <div class="text-center mb-4">
            <h2 class="section-title px-5"><span class="px-2">Sản phẩm bán chạy</span></h2>
        </div>
        <div class="row px-xl-5 pb-3">
            <% data.forEach(product => { %>
                <%if (product.ban_chay == "1") { %>
                    <div class="col-lg-3 col-md-6 pb-1">             
                        <div class="card product-item border-0 mb-4">
                            <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0 img-product">
                                <img class="img-fluid w-100"  src="/<%=product.anh_sp %>" alt="">
                            </div>
                            <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                                <h6 class="text-truncate mb-3"><%=product.ten_sp %></h6>
                                <div class="d-flex justify-content-center">
                                    <h6><%=product.gia_sp %> </h6><h6 class="text-muted ml-2"><del><%=product.banchay %></del></h6>
                                </div>
                            </div>
                            <div class="card-footer d-flex justify-content-between bg-light border">
                                <a href="/detail/?page_layout=detail-product&id=<%= product.id_sp %>" class="btn btn-sm text-dark p-0"><i class="fas fa-eye text-primary mr-1"></i>Chi tiết</a>
                                <a href="" class="btn btn-sm text-dark p-0"><i class="fas fa-shopping-cart text-primary mr-1"></i>Thêm vào giỏ hàng</a>
                            </div>
                        </div>
                    </div>
                    <% } %>
            <% }) %>
        </div>
    </div>
    <!-- Categories End --> 