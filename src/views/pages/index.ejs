<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); -%>
    <style>
        .img-product{
            width: 100%;
            height: 230px;
            overflow: hidden;
            text-align: center;
        }
        .img-product img{
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
        .img-detail{
            width: 100%;
            height: 370px;
            overflow: hidden;
            text-align: center;
        }
        .img-detail img{
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
    </style>
</head>

<body>
    <!-- Topbar Start -->
    <%- include('../partials/header'); -%>
    <!-- Topbar End -->


    <!-- Navbar Start -->
    <div class="container-fluid mb-5">
        <div class="row border-top px-xl-5">
            <% if (locals.dataLocal) { %>
                <%- include('../partials/categorybar',{data : dataLocal}); -%>
              <% }
            %>
            <div class="col-lg-9">
                <%- include('../partials/navbar'); -%>
                <% if (page_layout == '/') { %>
                    <%- include('../partials/slider'); -%>
                  <% }
                %>
            </div>
        </div>
    </div>
    <!-- Navbar End -->
    <!-- Content -->
    <% switch (page_layout) {
        case '/' : %>
            <%- include('./home',{data : products}); -%>
            <% break;
        case 'detail-product' : %>
        <% if (dataDetail || comments) { %>
        <%- include('./product-detail',{data : dataDetail,data1 : comments}); -%>
        <% } %>
            <% break;
        case 'products' : %>
        <% if (danhmucsp && sanpham) { %>
            <%- include('./products',{data1 : danhmucsp,data2 : sanpham}); -%>
            <% } %>
            <% break;
        case 'search' : %>
            <%- include('./search',{data : sanpham}); -%>
            <% break;
        default:
            break;
        } %>

    <!-- Footer Start -->
    <%- include('../partials/footer'); -%>
    <!-- Footer End -->


    <!-- Back to Top -->
    <a href="#" class="btn btn-primary back-to-top"><i class="fa fa-angle-double-up"></i></a>


    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
    <script src="/lib/easing/easing.min.js"></script>
    <script src="/lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- Contact Javascript File -->
    <script src="/mail/jqBootstrapValidation.min.js"></script>
    <script src="/mail/contact.js"></script>

    <!-- Template Javascript -->
    <script src="/js/main.js"></script>
</body>

</html>